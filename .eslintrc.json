{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"standard",
		"plugin:flowtype/recommended"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"flowtype"
	],
	"rules": {
		"space-before-function-paren": [
			"error",
			{
				"anonymous": "always",
				"named": "never",
				"asyncArrow": "always"
			}
		],
		"comma-dangle": ["error", "only-multiline"],
		"semi": "off"
	}
}